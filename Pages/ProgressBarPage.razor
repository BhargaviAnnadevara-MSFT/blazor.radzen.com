@page "/progressbar"
@using Radzen
@using NorthwindBlazor.Data
@using NorthwindBlazor.Models.Northwind
@using Microsoft.EntityFrameworkCore

<h1 style="display:inline">ProgressBar</h1><a style="margin-left: 10px" href="https://github.com/akorchev/blazor.radzen.com/blob/master/Pages/ProgressBarPage.razor" target="_blank">[source code]</a><a style="margin-left: 10px" href="https://www.radzen.com/documentation/blazor/progressbar/" target="_blank">[documentation]</a>

<p>This page demonstrates <b>ProgressBar</b> component.</p>
<RadzenCard>
    <div class="row">
        <div class="col-md-6">
            <h3>ProgressBar in determinate mode</h3>
            <RadzenProgressBar @bind-Value="@value" Style="margin-bottom: 20px"  />
            <br />
            <h3>ProgressBar in indeterminate mode</h3>
            <RadzenProgressBar @bind-Value="@value" ShowValue="false" Mode="ProgressBarMode.Indeterminate" Style="margin-bottom: 20px" />
        </div>
        <div class="col-md-6">
            <h3>Events</h3>
            <RadzenCard style="overflow: auto;height:500px;">
               N/A
            </RadzenCard>
        </div>
    </div>
</RadzenCard>

@code {
    double value = 55;
}
